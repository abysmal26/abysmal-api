{
    "compilerOptions": {
        "target": "ESNext",                          
        "module": "commonjs",
        // "lib": ["es6", "DOM"],                     
        "outDir": "./dist/",                          
        "rootDir": "./src/",
        "strict": true,         
        "esModuleInterop": true,
        // "noImplicitAny": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": false,
        "baseUrl": "./"
    },
    "files": [
        "src/index.ts"
    ],
    "include": [
        "./**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}